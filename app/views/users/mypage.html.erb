<h1>My messages</h1>
<%= link_to 'New message', new_message_path, class: 'btn btn-lg btn-primary' %>
  
    <table class="table table-striped">
       <thead class="thread-light">
          <tr>
            <th>Title</th>
            <th>Message</th>
            <th>Edit/Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @messages.each do |message| %>
            <tr>
              <td><%= message.title %></td>
              <td><%= message.content %></td>
              <td><%= link_to'Edit', edit_message_path(message)%>
                  <%= link_to'Delete', message_path(message), method: :delete, data:{ confirm: 'Sure?' } %></td>
            </tr>
          <% end %>
         </tbody>
    </table>  
  