<ul class="list-unstyled">
  <% @messages.each do |message| %>
    <li class="media mb-3">
      <div class="media-body">
        
        <div>
          <p class="mb-0"><%= message.title %></p> &gt; <p class="mb-0"><%= message.content %></p>
        </div>
        <div>
          <% if current_user == message.user %>
            <%= link_to "Edit", edit_message_path(message), class: 'btn btn-primary btn-sm' %>
            <%= link_to "Delete", message, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  
</ul>